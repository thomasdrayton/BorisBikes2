require_relative 'bike'


class DockingStation
  attr_reader :bike

  DEFAULT_CAPACITY = 20

  def initialize
    @bikes = []
  end

  def release_bike
    fail "No bikes available" if empty?
    @bikes.pop
  end

  def dock(bike)
    fail 'Docking Station full' if full?
    @bikes.push(bike)
  end

  def bike
    @bikes[0] # ..@bikes.length]
  end

private


  def empty?
    @bikes.empty?
  end

  def full?
      @bikes.count >= DEFAULT_CAPACITY
  end

end
